<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iv_quote_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clipToPadding="true"
    android:elevation="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="@dimen/elevation8"
            android:lineSpacingExtra="6dp"
            android:padding="@dimen/elevation8"
            android:text="Something"
            android:textColor="@color/textColor"
            android:textSize="@dimen/font2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quote_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:elevation="@dimen/elevation4"
            android:padding="@dimen/elevation4"
            android:text="Something"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font1"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quote_genre_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_gravity="start"
                android:layout_margin="@dimen/elevation4"
                android:gravity="start"
                android:padding="@dimen/elevation4"
                android:text="Something"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/font" />

            <ImageView
                android:id="@+id/fav_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_favorite_black_24dp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>