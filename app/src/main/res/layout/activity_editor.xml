<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_Lo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.activities.EditorActivity">


    <LinearLayout
        android:id="@+id/top_save_and_share_bar"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:padding="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_editor_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_close_black_24dp" />

        <ImageView
            android:id="@+id/doodle_btn"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:src="@drawable/ic_doodle" />

        <ImageView
            android:id="@+id/doodle_brush_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"

            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:padding="@dimen/elevation8"
            android:src="@drawable/ic_paintbrush"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/doodle_color_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:alpha="0.9"
            android:tint="@color/colorAccent"

            android:padding="@dimen/elevation8"
            android:src="@drawable/ic_palette"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/doodle_shadow_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.8"
            android:tint="@color/colorAccent"

            android:src="@drawable/ic_shadow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/doodle_undo_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:tint="@color/colorAccent"

            android:src="@drawable/ic_undo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/doodle_redo_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:tint="@color/colorAccent"

            android:src="@drawable/ic_redo"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/doodle_eraser_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:tint="@color/colorAccent"

            android:padding="@dimen/elevation8"
            android:src="@drawable/ic_trash"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/delete_view_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"

            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageView
            android:id="@+id/save_work_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"

            android:layout_weight="1.5"
            android:src="@drawable/ic_save_black_24dp" />

        <ImageView
            android:id="@+id/font_share_module"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"

            android:layout_weight="1.5"
            android:src="@drawable/ic_menu_share" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/features_layout"
        android:layout_below="@id/top_save_and_share_bar"
        android:background="@color/black_overlay">

        <RelativeLayout
            android:id="@+id/quote_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:animateLayoutChanges="true"
            android:orientation="vertical">


            <!--COLORED FILTER-->
            <ImageView
                android:id="@+id/imageView_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp" />
            <!--BLURR-->
            <ImageView
                android:id="@+id/iv_light_effect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp" />
            <!--QUOTE BODY-->

            <!--QUOTE_AUTHOR_PART-->
            <RelativeLayout
                android:id="@+id/arena_text_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="4dp"
                android:orientation="vertical"
                android:background="@android:color/transparent">


                <TextView
                    android:id="@+id/tv_Quote_Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/font3_5"
                    android:visibility="gone"
                    tools:text="Great Power Comes with Great Responsibilities" />

                <Button
                    android:id="@+id/bt_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/fontsmall"
                    android:alpha="0.3"
                    android:background="@drawable/rounded_rect"
                    android:elevation="8dp"
                    android:text="@string/clear"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"

                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_Quote_Author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:paddingTop="@dimen/elevation8"
                    android:textAlignment="center"

                    android:textColor="@color/textColor"

                    android:textSize="@dimen/font2"
                    android:visibility="gone"
                    tools:text="Spiderman" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_above="@id/tv_Quote_Author"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/elevation8"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/mark_quotzy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                android:text="@string/Qotzy"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="16dp"
                android:textStyle="bold"

                android:visibility="visible" />

            <ImageView
                android:id="@+id/quotzy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_above="@id/mark_quotzy_tv"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:elevation="4dp"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/features_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:padding="1dp" />
        <!--android:layout_above="@id/text_and_background_layout"-->

        <LinearLayout
            android:id="@+id/text_and_background_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/elevation8"
                android:text="@string/Text"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/background_and_Image_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/elevation8"

                android:text="@string/background"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/close_and_done_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/close_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/elevation8"
                android:text="@string/close"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/done_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/elevation8"
                android:gravity="center"
                android:text="@string/done"
                android:textSize="@dimen/font1"
                android:textStyle="bold" />

        </LinearLayout>
        <!--LEVEL 2 RECYCLERVIEWS-->

        <!--LEVEL 2 SLIDER-->

        <SeekBar
            android:id="@+id/progress_slider_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/action_settings"
            android:max="360"
            android:padding="@dimen/standardPadding"
            android:progress="180"
            android:thumbTint="@color/deep_orange_50"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>