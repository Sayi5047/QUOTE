<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context="com.hustler.quote.ui.activities.SplashActivity">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="15"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_splash_name_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="monospace"
        android:gravity="bottom"
        android:padding="@dimen/elevation16"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/WHITE"
        android:textSize="35sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:elevation="@dimen/elevation8"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_splash_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="monospace"
            android:gravity="bottom"
            android:padding="@dimen/elevation16"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/black_overlay"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/mProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/elevation16"
            android:progress="0" />

        <TextView
            android:id="@+id/mTvProgressUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/setting_up_things_for_first_time"
            android:padding="@dimen/elevation8"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTvProgressUpdate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:hint="@string/_00_completed"
            android:padding="@dimen/elevation8"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
