<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:padding="16dp"
        android:text="@string/choose_color"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/_demo_color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="4dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/font3"
        android:textStyle="italic" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/colors_rv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"

        android:padding="4dp" />


    <Button
        android:id="@+id/bt_color_shadow"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="@dimen/font"
        android:layout_weight="1"
        android:background="@drawable/rounded_rect"
        android:text="@string/apply_shadow"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_color_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_color_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font"
            android:layout_weight="1"
            android:text="@string/choose"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerAdId"
        ads:layout_anchorGravity="bottom">

    </com.google.android.gms.ads.AdView>
</LinearLayout>
