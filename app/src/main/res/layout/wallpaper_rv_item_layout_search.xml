<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:elevation="16dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp">

        <ImageView
            android:id="@+id/wallpaper_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/geometry_2"
            android:transitionName="@string/wallpaper_transision_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/bwgradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/photographer_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="4dp"
                android:background="@drawable/circledrawable" />

            <TextView
                android:id="@+id/photographer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="4dp"
                android:layout_toEndOf="@id/photographer_image"
                android:padding="4dp"
                android:textColor="@android:color/white"
                tools:text="Sayi Manoj Sugavasi" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>