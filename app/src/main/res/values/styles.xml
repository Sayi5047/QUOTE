<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/textColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/textColor</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme" tools:keep="@style/AppTheme_Transparent">
        <item name="windowNoTitle">true</item>
        <item name="actionBarItemBackground">@android:color/transparent</item>
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NoStatusBar" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.coldscreen" parent="AppTheme.NoActionBar" tools:keep="@style/AppTheme_NoActionBar_coldscreen">
        <item name="android:windowBackground">@drawable/coldscreen</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Widget.MaterialComponents.ActionBar.Solid" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/black_overlay</item>
    </style>

    <style name="TransparentActionBar" parent="Widget.AppCompat.ActionBar" tools:keep="@style/TransparentActionBar">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert" tools:keep="@style/MyAlertDialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="EditTextDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/deep_orange_50</item>
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="EditTextDialog_non_floater" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="EditTextDialog_non_floater_2" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/WHITE</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@anim/alpha_visible</item>
        <item name="android:windowExitAnimation">@anim/alpha_invisible</item>
    </style>

    <style name="EditTextDialog_scaled" parent="Theme.MaterialComponents.Dialog" tools:keep="@style/EditTextDialog_scaled">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@anim/scaleup</item>
        <item name="android:windowExitAnimation">@anim/scale_down</item>
    </style>


    <style name="uber_expanded_text_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="uber_collapsed_text_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
